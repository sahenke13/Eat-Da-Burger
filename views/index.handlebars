<div>
    <h2>Burgers to Eat</h2>
    {{#each burger}}{{#unless this.Eaten}}

    <p>
        {{this.id}}.
        {{this.Burger}}
        <button data-burgerid="{{this.id}}" class="eatBurger">Eat the Burger!</button>
    </p>
    {{/unless}}
    {{/each}}
</div>

<div>
    <h2>Add a Burger</h2>
    <form id="addBurger"  class="button-size">
        <textarea type="text" name="burger"></textarea>
        <button type="submit">Add a Burger!!</button>
    </form>


    <h2>Burgers that have been Eaten</h2>
        {{#each burger}}{{#if this.Eaten}}
    <p>
        {{this.id}}. {{this.Burger}}
    </p>
    {{/if}}
    {{/each}}
</div>

